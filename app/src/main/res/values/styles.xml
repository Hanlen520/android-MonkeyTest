<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/ButtonGreenStyle</item>
    </style>

    <style name="ButtonGreenStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/DIMEN_HEIGHT_24_PX</item>
        <item name="android:background">@drawable/btn_bg_green</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/DIMEN_TEXT_15_PX</item>
        <item name="android:paddingRight">@dimen/DIMEN_TEXT_15_PX</item>
    </style>

</resources>
